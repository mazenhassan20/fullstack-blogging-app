pipeline {
    agent any

    environment {
        IMAGE_NAME = "mazenelsayad/bloggingapp";
        IMAGE_TAG = "v${BUILD_NUMBER}";
        REGISTRY = "docker.io";
    }

    stages {

        stage("Checkout") {
            steps {
                checkout scm
                sh 'echo "Branch: $(git rev-parse --abbrev-ref HEAD)"'
            }
        }

        stage("Build Maven") {
            steps {
                dir('fullstack-blogging-app') {
                    sh "./mvnw clean package -DskipTests"
                }
            }
            post {
                always {
                    archiveArtifacts artifacts: 'fullstack-blogging-app/target/*.jar', allowEmptyArchive: true
                }
            }
        }

        stage("Build Docker Image") {
            steps {
                dir('fullstack-blogging-app') {
                    withCredentials([usernamePassword(
                        credentialsId: 'DOCKERHUB_CREDENTIALS',
                        usernameVariable: 'USER',
                        passwordVariable: 'PASS'
                    )]) {
                        sh """
                            echo "$PASS" | docker login -u "$USER" --password-stdin
                            docker build -t ${IMAGE_NAME}:${IMAGE_TAG} .
                            docker push ${IMAGE_NAME}:${IMAGE_TAG}
                        """
                    }
                }
            }
        }

        stage("Update Kubernetes Manifest") {
            steps {
                dir('fullstack-blogging-app/k8s') {
                    sh """
                        sed -i "s|image: .*|image: ${IMAGE_NAME}:${IMAGE_TAG}|g" application.yaml
                        cat application.yaml | grep image -n
                    """
                }
            }
        }

        stage("Deploy to Kubernetes") {
            steps {
                withCredentials([string(credentialsId: 'K8S_CONFIG', variable: 'KUBECONFIG_CONTENT')]) {
                    sh '''
                        echo "Creating kubeconfig_temp..."

                        # كتابة kubeconfig بطريقة سليمة بدون تكسير
                        printf "%s" "$KUBECONFIG_CONTENT" > kubeconfig_temp
                        chmod 600 kubeconfig_temp

                        echo "---- First 30 lines of kubeconfig ----"
                        head -n 30 kubeconfig_temp || true
                        echo "----------------------------------------"

                        echo "Validating kubeconfig…"
                        kubectl --kubeconfig=kubeconfig_temp config view >/dev/null 2>&1 || {
                            echo "ERROR: Invalid kubeconfig!"
                            exit 1
                        }

                        echo "Applying Kubernetes manifests…"
                        kubectl --kubeconfig=kubeconfig_temp apply -f fullstack-blogging-app/k8s/namespace.yaml
                        kubectl --kubeconfig=kubeconfig_temp apply -f fullstack-blogging-app/k8s/
                    '''
                }
            }
        }
    }

    post {
        success {
            echo "Deployment completed successfully!"
        }
        failure {
            echo "Pipeline failed."
        }
    }
}

